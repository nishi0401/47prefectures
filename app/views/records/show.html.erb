<div><%= @record.prefecture[:name] %></div>
<div><%= image_tag @record.image, width: "100%", height: "400", class: 'record-image' if @record.image.attached? %></div>
<div><%= @record.content %></div>
<% if current_user.id = @record.user.id %>
  <%= link_to "編集", edit_record_path(@record.id) %>
  <%= link_to "削除", record_path(@record.id), data: {turbo_method: :delete} %>
<% end %>