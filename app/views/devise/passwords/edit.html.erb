<div class="main-container">
  <div class="title">パスワード変更</div>

  <%= form_with model: @user, url: user_password_path, method: :patch, local: true do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div class="field">
      <%= f.label :password, "新しいパスワード(6文字以上)", class: "form-label" %><br />
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "new-password-form" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "確認用パスワード", class: "form-label" %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "password-confirmation-form" %>
    </div>

    <div class="actions">
      <%= f.submit "パスワードを変更する" %>
    </div>
  <% end %>

  <div class="devise-link-container">
    <div class="devise-link">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
