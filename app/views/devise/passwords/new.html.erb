<div class="main-container">
  <div class="title">パスワードをお忘れですか？</div>

  <%= form_with model: @user, url: user_password_path, local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="resetting">
    <%= f.label :email, 'メールアドレス', class: "resetting-email" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "resetting-email-form" %>
  </div>

  <div class="actions">
    <%= f.submit "パスワードをリセットする" %>
  </div>
  <% end %>
  <div class="devise-link-container">
    <div class="devise-link">
  <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
